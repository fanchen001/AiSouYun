<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#00000000" >

    <ImageView
        android:id="@+id/share_user_head"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_margin="8dip" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dip"
        android:layout_marginRight="8dip"
        android:layout_marginTop="8dip"
        android:background="@drawable/share_item_background"
        android:orientation="vertical"
        android:paddingLeft="8dip"
        android:paddingRight="8dip"
        android:paddingTop="8dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/share_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff397cbf"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:paddingRight="4dip"
                android:singleLine="true"
                android:textColor="#ff999999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/share_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffaaaaaa"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/share_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingBottom="4dip"
            android:paddingRight="8dip"
            android:paddingTop="4dip"
            android:singleLine="true"
            android:textColor="#ff333333"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/share_ico"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_marginBottom="4dip"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/share_details"
                android:layout_width="fill_parent"
                android:layout_height="100dip"
                android:layout_margin="4dp"
                android:scaleType="center" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#fffafafa" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="4dip"
            android:paddingTop="4dip" >

            <TextView
                android:id="@+id/share_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#ffbbbbbb"
                android:textSize="12sp" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:layout_margin="2dip"
                android:background="#fff0f0f0" />

            <TextView
                android:id="@+id/share_praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dip"
                android:layout_weight="1"
                android:drawableLeft="@drawable/share_commentlike_like"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#ffbbbbbb"
                android:textSize="12sp" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:layout_margin="2dip"
                android:background="#fff0f0f0" />

            <TextView
                android:id="@+id/share_trample"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dip"
                android:layout_weight="1"
                android:drawableLeft="@drawable/share_commentlike_notlike"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#ffbbbbbb"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>